<div class="container pt-3">
  <h1>New game</h1>
</div>

<div class="p-3 d-flex ">
  <% @letters.each do |letter| %>
    <div class="m-1 px-3 py-2 bg-primary text-white font-weight-bold shadow">
      <%= letter.capitalize %>
    </div>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <label for="new" class="p-3">What is the longest word you can find?</label>
  <input type="text" name="new">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, @start_time %>
  <input type="submit" value="Play">
</form>
